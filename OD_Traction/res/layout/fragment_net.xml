<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/hostName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/frag_net_srvr_field"
        android:inputType="text"
        android:textAllCaps="true" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/cnctBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hostName"
        android:layout_centerHorizontal="true"
        android:text="@string/frag_net_cnct_btn" />

    <Button
        android:id="@+id/discBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/cnctBtn"
        android:text="@string/frag_net_disc_btn" />

</RelativeLayout>
